@model SCMS.ViewModels.ReceptionDashboardVm

@{
    ViewData["Title"] = "Reception Dashboard";

    var recentPatientsCount = Model.RecentPatients?.Count() ?? 0;
    var radiologyRequestsCount = (int)(ViewBag.RadiologyRequestsCount ?? 0);
}

<div class="container mt-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Welcome, @Model.ReceptionistName</h2>

        <div class="d-flex gap-2">
            <a asp-controller="Reception" asp-action="CreateSlot" class="btn btn-success">
                ➕ Add Clinic Slot
            </a>

            <a asp-controller="Reception" asp-action="Slots" class="btn btn-primary">
                📅 View Slots
            </a>
        </div>
    </div>

    <!-- Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5>Today's Slots</h5>
                    <h2>@Model.TodaysAppointmentsCount</h2>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5>Recent Patients</h5>
                    <h2>@recentPatientsCount</h2>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5>Radiology Requests</h5>
                    <h2>@radiologyRequestsCount</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Today's Slots -->
    <div class="card mb-4">
        <div class="card-header">Today's Clinic Slots</div>

        <table class="table table-striped mb-0">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Doctor</th>
                    <th>Price</th>
                    <th>Capacity</th>
                    <th>Booked</th>
                    <th>Remaining</th>
                    <th>Status</th>
                    <th style="width:300px;">Actions</th>
                </tr>
            </thead>

            <tbody>
                @if (Model.TodaysAppointments == null || !Model.TodaysAppointments.Any())
                {
                    <tr>
                        <td colspan="9" class="text-center text-muted">No slots today.</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model.TodaysAppointments)
                    {
                        <tr>
                            <td>@item.AppointmentDate.ToShortDateString()</td>
                            <td>@item.StartTime - @item.EndTime</td>
                            <td>@item.DoctorName</td>
                            <td>@item.Price</td>
                            <td>@item.Capacity</td>
                            <td>@item.CurrentCount</td>
                            <td>@item.Remaining</td>
                            <td>
                                <span class="badge @(item.Status == "Cancelled" ? "bg-danger" : item.Status == "Closed" ? "bg-warning text-dark" : "bg-success")">
                                    @item.Status
                                </span>
                            </td>
                            <td>
                                <div class="d-flex align-items-center gap-2 flex-wrap">

                                    <a asp-controller="Reception"
                                       asp-action="SlotDetails"
                                       asp-route-id="@item.AppointmentId"
                                       class="btn btn-sm btn-dark">
                                        Details
                                    </a>

                                    @if (item.Status == "Available" && item.Remaining > 0)
                                    {
                                        <a asp-controller="Reception"
                                           asp-action="BookPatient"
                                           asp-route-appointmentId="@item.AppointmentId"
                                           class="btn btn-sm btn-primary">
                                            Book Patient
                                        </a>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-secondary" disabled>Not Bookable</button>
                                    }

                                    @if (item.Status != "Cancelled")
                                    {
                                        <form asp-controller="Reception"
                                              asp-action="CancelSlot"
                                              method="post" class="m-0">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="appointmentId" value="@item.AppointmentId" />
                                            <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                                            <button type="submit"
                                                    class="btn btn-sm btn-danger"
                                                    onclick="return confirm('Cancel this slot?');">
                                                Cancel Slot
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Recent Patients -->
    <div class="card">
        <div class="card-header">Recent Patients</div>

        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Phone</th>
                    <th>Last Visit</th>
                    <th style="width:160px;">Actions</th>
                </tr>
            </thead>

            <tbody>
                @if (Model.RecentPatients == null || !Model.RecentPatients.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted">No recent patients.</td>
                    </tr>
                }
                else
                {
                    foreach (var p in Model.RecentPatients)
                    {
                        <tr>
                            <td>@p.FullName</td>
                            <td>@p.Age</td>
                            <td>@p.Phone</td>
                            <td>@(p.LastVisit?.ToShortDateString() ?? "-")</td>
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    <a asp-controller="Reception"
                                       asp-action="PatientDetails"
                                       asp-route-id="@p.PatientId"
                                       class="btn btn-sm btn-info">👁</a>

                                    <a asp-controller="Reception"
                                       asp-action="EditPatient"
                                       asp-route-id="@p.PatientId"
                                       class="btn btn-sm btn-warning">✏</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

</div>
