@model SCMS.ViewModels.ReceptionCreateSlotVm

@{
    ViewData["Title"] = "Create Clinic Slot";
}

<link rel="stylesheet" href="~/css/clinic.css" />

<div class="container create-appointment-page">
    <h2 class="page-title">Create Clinic Slot</h2>

    <form asp-controller="Reception" asp-action="CreateSlot" method="post" class="form-card">
        @Html.AntiForgeryToken()
        <input type="hidden" name="returnUrl" value="@Context.Request.Headers["Referer"].ToString()" />

        <div class="form-group">
            <label>Doctor</label>
            <select asp-for="DoctorId" class="form-control">
                <option value="">-- Select Doctor --</option>
                @foreach (var d in ViewBag.Doctors)
                {
                    <option value="@d.UserId">@d.FullName</option>
                }
            </select>
            <span asp-validation-for="DoctorId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AppointmentDate"></label>
            <input asp-for="AppointmentDate" type="date" class="form-control" />
            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="StartTime"></label>
            <input asp-for="StartTime" type="time" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="EndTime"></label>
            <input asp-for="EndTime" type="time" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Capacity"></label>
            <input asp-for="Capacity" type="number" min="1" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Status"></label>
            <select asp-for="Status" class="form-control">
                <option value="Available">Available</option>
                <option value="Closed">Closed</option>
            </select>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn primary-btn">Save Slot</button>
            <a href="javascript:history.back()" class="btn secondary-btn">Back</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
